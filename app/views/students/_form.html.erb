<%= simple_form_for @student, html: {multipart: true} do |f| %>

  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@student.errors.count, "error") %> prevented this student from being saved 
      </h2>

      <ul>
        <% @student.errors.full_messages.each do |error| %>
          <li>
            <%= error %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :email %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :phone %>
  <%= f.input :status %>
  
  <%= f.input :photo, as: :file %>

  <%= f.association :courses, as: :check_boxes %>


  <%= f.button :submit %>

<% end %>