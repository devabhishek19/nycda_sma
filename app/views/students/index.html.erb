<div class="row">
  <div class="col-md-8">
    <div class="page-title">
      <h1>Students</h1>
      <%= link_to "Add New Student", new_student_path, method: :get, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= link_to(student.email, student_path(student)) %></td>
            <td><%= student.fname %></td>
            <td><%= student.lname %></td>
            <td><%= link_to "Delete", student_path(student), method: :delete, data: {confirm: "Are you sure you want to delete this student?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>